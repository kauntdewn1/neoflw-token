{
    "name": "neoflow",
    "version": "1.0.0",
    "description": "Orquestração terminal para o protocolo NEOFLOW com Ape Framework",
    "scripts": {
        "init": "ape init neoflow",
        "compile": "ape compile",
        "plugins": "ape plugins install solidity alchemy etherscan || true",
        "account:import": "ape accounts import neoflow-admin",
        "test": "ape test",
        "deploy:token": "ape run scripts/deploy/deploy_token --network polygon:mainnet",
        "deploy:vault": "ape run scripts/deploy/deploy_vault --network polygon:mainnet",
        "deploy:claim": "ape run scripts/deploy/deploy_claim --network polygon:mainnet",
        "verify:token": "ape etherscan verify NeoFlowToken --network polygon:mainnet",
        "verify:vault": "ape etherscan verify StakingVault --network polygon:mainnet",
        "verify:claim": "ape etherscan verify NeoFlowClaim --network polygon:mainnet",
        "deploy:token:goerli": "ape run deploy_token --network ethereum:goerli",
        "deploy:vault:goerli": "ape run deploy_vault --network ethereum:goerli",
        "deploy:local": "ape run deploy_token --network local",
        "console": "ape console",
        "clean": "rm -rf build .ape",
        "start:dev": "npm run plugins && npm run compile && npm run test && npm run deploy:token"
    },
    "keywords": [
        "web3",
        "smart-contracts",
        "ape-framework",
        "neoflow",
        "modular-dao"
    ],
    "author": "MELLØ",
    "license": "MIT",
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@okxweb3/hardhat-explorer-verify": "^1.6.5",
        "@openzeppelin/contracts": "^4.9.6",
        "dotenv": "^17.2.3",
        "hardhat": "^2.27.1"
    }
}
